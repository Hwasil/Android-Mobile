            <EditText
                android:id="@+id/edit10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="0" />

        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="금일 먹은 총량 : "
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnTo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="확인" />

    <Button
        android:id="@+id/btnPrv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이전 화면" />


</LinearLayout>